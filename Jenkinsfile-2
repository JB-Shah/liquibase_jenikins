pipeline {
  agent {
    docker { 
      image 'liquibase/liquibase:4.4.2' 
    }
  }
  
  environment {
    DATABASE_URL = 'jdbc:postgresql://postgres:5432/liquibase_db'
    DATABASE_DRIVER = 'org.postgresql.Driver'
    DATABASE_CHANGELOG = 'root_changelog.xml'
    DATABASE_USERNAME = "admin"
    DATABASE_PASSWORD = "admin"
  }

  stages {
    stage('Status') {
      steps {
        script {
          sh "liquibase status --url=${env.DATABASE_URL} --driver=${env.DATABASE_DRIVER} --changeLogFile=${env.DATABASE_CHANGELOG} --username=${env.DATABASE_USERNAME} --password=${env.DATABASE_PASSWORD}"
        }
      }
    }
    stage('Update') {
      steps {
        script {
          sh "liquibase update --url=${env.DATABASE_URL} --driver=${env.DATABASE_DRIVER} --changeLogFile=${env.DATABASE_CHANGELOG} --username=${env.DATABASE_USERNAME} --password=${env.DATABASE_PASSWORD}"
        }
      }
    }
  }
  
  post {
    always {
      node {
        cleanWs()
      }
    }
  }
}
