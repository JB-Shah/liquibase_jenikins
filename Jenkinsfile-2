pipeline {
  agent {
    docker { image 'liquibase/liquibase:4.4.2' }
  }
  stages {
    stage('Status') {
      steps {
        sh 'liquibase status --url="jdbc:postgresql://postgres:5432/liquibase_db" --changeLogFile=root_changelog.xml --username=admin --password=admin'
      }
    }
    stage('Update') {
      steps {
        sh 'liquibase update --url="jdbc:postgresql://postgres:5432/liquibase_db" --changeLogFile=root_changelog.xml --username=admin --password=admin'
      }
    }
  }
  post {
    always {
      cleanWs()
    }
  }
}